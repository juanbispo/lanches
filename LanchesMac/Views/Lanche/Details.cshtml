@model Lanche


<div class="card" style="width: 18rem;">
  <img src="@Model.ImagemUrl" class="card-img-top" style="width:200px; height:200px;padding:20px"/>
  <div class="card-body">
    <h5 class="card-title">@Model.Nome</h5>
    <p class="card-text">@Model.DescricaoDetalhada.</p>
    <a asp-controller="Lanche" asp-action="List" class="btn btn-secondary">Voltar</a>
    <a  class="btn btn-primary" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId=@Model.LancheId>Incluir no Carrinho</a>
  </div>
</div>
